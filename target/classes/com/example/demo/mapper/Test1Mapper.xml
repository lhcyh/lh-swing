<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.Test1Mapper">
    <insert id="addTest1" useGeneratedKey="true" keyProperty="id" parameterType="com.example.demo.pojo.Test1">
         insert into `test1`(`varchar`,`test2_id`,`upload_time`,`bit`) values(#{varchar},#{test2Id},#{uploadTime},#{bit})
    </insert>

    <delete id="deleteTest1ById">
         delete from `test1` where id=#{id}
    </delete>

    <update id="updateTest1" parameterType="com.example.demo.pojo.Test1">
        update `test1`
        <set>
            <if test="varchar!=null">
               `varchar`=#{varchar},
            </if>
            <if test="test2Id!=null">
               `test2_id`=#{test2Id},
            </if>
            <if test="uploadTime!=null">
               `upload_time`=#{uploadTime},
            </if>
            <if test="bit!=null">
               `bit`=#{bit},
            </if>
        </set>
        where id=#{id}
    </update>


    <select id="getTest1ById" resultType="com.example.demo.pojo.Test1" >
        select * from `test1` where `id`=#{id}
    </select>
    <select id="getTest1ByVarchar" resultType="com.example.demo.pojo.Test1" >
        select * from `test1` where `varchar`=#{varchar}
    </select>


    <sql id="exampleClause">
        <foreach collection="leftJoinList" item="joinInfo">
            left join ${joinInfo.rightTable} on ${joinInfo.leftTable}.${joinInfo.leftKey}=${joinInfo.rightTable}.${joinInfo.rightKey}
        </foreach>
        <where>
            <foreach collection="orCriterionList" item="criterionList" separator="or">
                <trim prefix="(" prefixOverrides="and" suffix=")">
                    <foreach collection="criterionList" item="criterion">
                        and ${criterion.table}.${criterion.field}
                        <choose>
                            <when test="criterion.valueType=='noValue'">
                                ${criterion.condition}
                            </when>
                            <when test="criterion.valueType=='singleValue'">
                                ${criterion.condition} #{criterion.value}
                            </when>
                            <when test="criterion.valueType=='betweenValue'">
                                ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                            </when>
                            <when test="criterion.valueType=='listValue'">
                                ${criterion.condition}
                                <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                                    #{listItem}
                                </foreach>
                            </when>
                        </choose>
                    </foreach>
                </trim>
            </foreach>
        </where>
        <if test="orderBy!=null">
            order by ${orderBy.table}.${orderBy.field} ${orderBy.condition}
        </if>
        <if test="limitStart!=null">
            limit #{limitStart}
            <if test="limitNum!=null">
                ,#{limitNum}
            </if>
        </if>
    </sql>

    <select id="getTest1ListByExample" parameterType="Example"  resultType="com.example.demo.pojo.Test1" >
        select * from `test1`
        <include refid="exampleClause"></include>
    </select>

</mapper>
